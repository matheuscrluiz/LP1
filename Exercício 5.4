#include <stdio.h>

void troca(int* p1, int* p2)
{
	int aux;

	aux = *p1;
	*p1 = *p2;
	*p2 = aux;	
}
int main (void)
{
	int x,y;
	printf("Digite um valor para X: ");
	scanf("%d", &x);
	printf("Digite um valor para Y: ");
	scanf ("%d", &y);
	
	printf("Os valores antes da troca são: %d e %d", x,y);
	
	troca(&x, &y);
	
	printf("\nOs valores depois da troca são: %d e %d", x,y);

	return 0;
}	
