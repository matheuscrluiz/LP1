#include <stdio.h>
#include <string.h>

int main (void)
{
    char str[25];
    int i =0;
    
    printf("\n Digite a palavra: ");
    scanf("%s", &str);
    FILE* f = fopen("str.txt", "w");
    printf("\n %s", str);
    
    for(i=0; i<strlen(str); i++)
    {
        fopen(str[i], f);
    }
    fclose(f);
    
    return 0;
}
