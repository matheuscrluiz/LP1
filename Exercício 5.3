#include <stdio.h>

void compras(int* conta, int valor)
{
	*conta = (*conta - valor);
}

int main (void)
{
	int conta1, conta2;	
	int* conta;
	int compra[] = {100, 50, 80, 30, 20};
	int i = 1;
		
	printf("Digite o valor da primeira conta: ");
	scanf("%d", &conta1);
	printf("\nDigite o valor da segunda conta: ");
	scanf("%d", &conta2);
	printf("\nSaldo da primeira conta: %d", conta1);
	printf("\nSaldo da segunda conta: %d", conta2);

	for (i =1; i<5; i++)
		{
			if (conta1 >= conta2)
				{
					conta = &conta1;
				}
			else{
					conta = &conta2;
				}
			compras(conta,compra[i]);
			printf("\nSaldo da primeira conta após compra: %d", conta1);
			printf("\nSaldo da segunda conta após compra: %d", conta2);
		}

	return 0;
}
