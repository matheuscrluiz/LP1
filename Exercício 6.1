#include <stdio.h>

void preenche (int* vec, int n)
{
	int i = 0;
	for(i = 0; i<n; i++)
		{
			printf("Digite um valor para a posição %d: ", i);
			scanf ("%d", &vec[i]);
		}
}
float media(int*vec, int n)
{	
	int i = 0;
	int soma = 0;
	
	for (i = 0; i<n;i++)
		{
			soma = (soma + vec[i]); 		
		}
	float media = (soma/i);
	return media;
}
int main (void)
{
	int vec[100];
	int qtd;
	printf ("Digite o tamanho do vetor: ");
	scanf("%d", &qtd);
	
	preenche(vec, qtd);
	media(vec, qtd);

	return 0;
}
