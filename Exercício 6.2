{
	for(int i = 0; i<l; i++)
		{
			for(int j = 0; j<c; j++)
				{
					printf("Digite [%d:%d]: ", i,j);
					scanf("%d", &arr[i][j]);			
				}
		}
}

float media(int l, int c, arr[100][100])
{
	int soma = 0
	for(int i = 0; i<l; i++)
		{
			for(int j = 0; j<c; j++)
				{
					soma = (soma  + arr[i][j]);			
				}
		}
	float media = (soma/l);
	return media;
}
